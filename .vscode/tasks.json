{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Pandoc on Markdown",
      "type": "shell",
      "command": "pandoc",
      "args": [
        "--top-level-division=part",
        "--natbib",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.tex",
        "-F",
        "mermaid-filter.cmd",
        "-F",
        "pandoc-crossref"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
